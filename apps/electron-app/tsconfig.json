{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // ESM doesn't yet support JSON modules.
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "vite.config.js",
  ]
}